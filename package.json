{
  "name": "desktop-order-management",
  "version": "0.0.2",
  "description": "A lightweight desktop application for managing customer orders",
  "main": "electron/main.js",
  "scripts": {
    "dev:ui": "vite",
    "dev:electron": "electron . --dev",
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:electron\"",
    "build:ui": "vite build",
    "build": "npm run build:ui && electron-builder",
    "release": "npm run build:ui && rimraf dist && electron-builder -p always"
  },
  "keywords": [
    "electron",
    "order-management",
    "desktop",
    "sqlite"
  ],
  "author": "Desktop Order Management Team",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "bwip-js": "^4.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "jsbarcode": "^3.12.1",
    "lucide-react": "^0.562.0",
    "pdfkit": "^0.17.1",
    "puppeteer-core": "^24.17.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.13.0",
    "sql.js": "^1.8.0",
    "tailwind-merge": "^3.4.0"
  },
  "build": {
    "appId": "com.desktop-order-management.app",
    "productName": "Desktop Order Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-renderer/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "aks30498",
      "repo": "desktop-order-management",
      "private": false,
      "releaseType": "release"
    }
  }
}

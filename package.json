{
  "name": "desktop-order-management",
  "version": "0.0.2",
  "description": "A lightweight desktop application for managing customer orders",
  "main": "src/main/main.js",
  "scripts": {
    "dev:ui": "vite",
    "dev:electron": "electron . --dev",
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:electron\"",
    "build:ui": "vite build",
    "build": "npm run build:ui && electron-builder"
  },
  "keywords": [
    "electron",
    "order-management",
    "desktop",
    "sqlite"
  ],
  "author": "Desktop Order Management Team",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "bwip-js": "^4.7.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "jsbarcode": "^3.12.1",
    "pdfkit": "^0.17.1",
    "puppeteer-core": "^24.17.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sql.js": "^1.8.0"
  },
  "build": {
    "appId": "com.desktop-order-management.app",
    "productName": "Desktop Order Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "aks30498",
      "repo": "desktop-order-management",
      "private": false,
      "releaseType": "release"
    }
  }
}
